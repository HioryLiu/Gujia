<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/slight_blue"
    tools:context="com.gujia.lhcw.seatheat.SeatHeatAty" >

    <include  
        android:id="@id/rl_titlebar"
        layout="@layout/include_titlebar" />
    
    <RelativeLayout 
        android:layout_below="@id/rl_titlebar"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:background="@drawable/background_circles_2">

        <ImageView
            android:id="@+id/big_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/background_big_circle" />

        <ImageView
            android:id="@+id/heat_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/big_circle"
            android:layout_centerHorizontal="true"
            android:src="@drawable/button_plus" />

        <ImageView
            android:id="@+id/heat_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/big_circle"
            android:layout_centerHorizontal="true"
            android:src="@drawable/button_minus" />

        <Button
            android:id="@+id/heat_shutdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:background="@drawable/image_button_blue"
            android:text="关闭座椅加热" />
        
        </RelativeLayout>

    
</RelativeLayout>
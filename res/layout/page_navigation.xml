<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    android:orientation="vertical"
    tools:context=".NavigationAty" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_launcher" />
        <TextView 
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="这里是姓名"/>
       
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    <RelativeLayout style="@style/IndexList" 
        android:id="@+id/gujiaPerson">

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_gujiaren" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="顾家人" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>

    
    <RelativeLayout style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_manage_device" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="管理我的设备" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    
    <RelativeLayout 
        android:id="@+id/lift_control"
        style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_sofa_control" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="升降控制" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    
    <RelativeLayout 
        android:id="@+id/seat_heat"
        style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_sofa_heat" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="座椅加热" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    
    <RelativeLayout 
        android:id="@+id/checkup"
        style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_health_exam" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="健康检查" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    
    <RelativeLayout 
        android:id="@+id/weigh"
        style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_weight" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="称重" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    
    <RelativeLayout style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_health_reminder" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="健康提醒" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    
    <RelativeLayout style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_help" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="健康使用说明" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>
    <RelativeLayout style="@style/IndexList" >

        <ImageView
            android:id="@+id/imgPerson"
            style="@style/IndexImage"
            android:src="@drawable/icon_manage_option" />

        <TextView
            android:id="@+id/textView1"
            style="@style/IndexText"
            android:layout_toRightOf="@+id/imgPerson"
            android:text="设置" />

        <ImageView
            style="@style/IndexArrow" />
    </RelativeLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slight_blue2"/>


</LinearLayout>

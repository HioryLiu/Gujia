<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gujia.lhcw.checkup.ResultDetailAty" >

    <include  layout="@layout/include_titlebar" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/slight_blue"
        android:layout_weight="4"></RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        
    </RelativeLayout>

    <RelativeLayout 
        
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/slight_blue"
        android:layout_weight="4">

        <Button
            android:id="@+id/btn_to_tendency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/image_button_blue"
            android:text="结果趋势" />

    </RelativeLayout>

</LinearLayout>